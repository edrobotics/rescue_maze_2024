{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build active file (RCJ2024_mazenav pi)",
            "command": "${workspaceFolder}/build.sh",
            "args": [
                "-e pi"
            ],
            "options": {},
            "problemMatcher": [],
